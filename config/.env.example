# ============================================
# OpenAI Configuration (Required)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# OpenSearch Configuration
# ============================================
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=StrongAdmin123!@#$
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_PDF_INDEX=rag-pdf-index
OPENSEARCH_VIDEO_INDEX=rag-video-index

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=768

# ============================================
# LLM Configuration (OpenSearch Connector)
# ============================================
# Model endpoint URL - Change this to use different providers
LLM_ENDPOINT=https://api.openai.com/v1/chat/completions
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=500

# Examples for different providers:
# OpenAI: https://api.openai.com/v1/chat/completions
# Anthropic: https://api.anthropic.com/v1/messages
# Cohere: https://api.cohere.ai/v1/chat
# Custom: https://your-custom-endpoint.com/v1/chat

# Optional: Custom headers (JSON format)
# LLM_HEADERS={"X-Custom-Header": "value"}

# Optional: Request body template
# LLM_REQUEST_TEMPLATE={"model": "${parameters.model}", "messages": ${parameters.messages}}

# ============================================
# Retrieval Configuration
# ============================================
RELEVANCE_THRESHOLD=0.7
MAX_RESULTS=5

# ============================================
# Data Paths Configuration (Optional)
# ============================================
# Customize where the system looks for data files
# If not set, defaults to data/transcripts and data/pdfs
PDF_DIR=data/pdfs
TRANSCRIPT_DIR=data/transcripts

# ============================================
# System Configuration
# ============================================
AUTO_INDEX_ON_STARTUP=true
LOG_LEVEL=INFO

# ============================================
# API Configuration (for API mode)
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false