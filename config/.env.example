# ============================================================================
# RAG Chatbot Configuration - Example Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# OpenSearch Configuration
# ----------------------------------------------------------------------------
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_PDF_INDEX=rag-pdf-index
OPENSEARCH_VIDEO_INDEX=rag-video-index

# ----------------------------------------------------------------------------
# Data Paths
# ----------------------------------------------------------------------------
TRANSCRIPT_DIR=data/transcripts
PDF_DIR=data/pdfs

# ----------------------------------------------------------------------------
# LLM Provider Configuration
# Choose ONE provider and configure its specific settings below
# ----------------------------------------------------------------------------

# ============================================================================
# OPTION 1: OpenAI
# ============================================================================
# LLM_PROVIDER=openai
# LLM_API_KEY=sk-...
# LLM_MODEL=gpt-4o-mini
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500
# LLM_ENDPOINT=https://api.openai.com/v1/chat/completions  # Optional

# ============================================================================
# OPTION 2: DeepSeek (Cost-effective OpenAI alternative)
# ============================================================================
# LLM_PROVIDER=deepseek
# DEEPSEEK_API_KEY=sk-...
# LLM_MODEL=deepseek-chat
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500

# ============================================================================
# OPTION 3: Cohere
# ============================================================================
# LLM_PROVIDER=cohere
# COHERE_API_KEY=...
# LLM_MODEL=command
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500

# ============================================================================
# OPTION 4: Azure OpenAI
# ============================================================================
# LLM_PROVIDER=azure_openai
# AZURE_API_KEY=...
# AZURE_API_BASE=https://your-resource.openai.azure.com
# AZURE_API_VERSION=2023-05-15
# AZURE_DEPLOYMENT_NAME=your-deployment-name
# LLM_MODEL=gpt-4
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500

# ============================================================================
# OPTION 5: Amazon Bedrock
# ============================================================================
# LLM_PROVIDER=bedrock
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1
# LLM_MODEL=anthropic.claude-v2
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500

# ============================================================================
# OPTION 6: Google VertexAI
# ============================================================================
# LLM_PROVIDER=vertexai
# VERTEXAI_PROJECT=your-project-id
# VERTEXAI_LOCATION=us-central1
# VERTEXAI_ACCESS_TOKEN=...
# LLM_MODEL=chat-bison
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500

# ============================================================================
# OPTION 7: Amazon SageMaker
# ============================================================================
# LLM_PROVIDER=sagemaker
# SAGEMAKER_ENDPOINT=your-endpoint-name
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1
# LLM_MODEL=your-model-name
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500

# ============================================================================
# OPTION 8: Amazon Comprehend (NLP tasks, not chat)
# ============================================================================
# LLM_PROVIDER=comprehend
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_SESSION_TOKEN=...  # Optional
# AWS_REGION=us-east-1

# ============================================================================
# OPTION 9: Custom OpenAI-Compatible Endpoint
# ============================================================================
# LLM_PROVIDER=custom
# LLM_ENDPOINT=https://your-custom-endpoint.com/v1/chat/completions
# LLM_API_KEY=...
# LLM_MODEL=your-model-name
# LLM_TEMPERATURE=0.3
# LLM_MAX_TOKENS=500
# LLM_HEADERS={"X-Custom-Header": "value"}  # Optional JSON string
# LLM_REQUEST_TEMPLATE={"custom": "template"}  # Optional JSON string

# ----------------------------------------------------------------------------
# Embedding Configuration
# ----------------------------------------------------------------------------
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# For OpenAI embeddings (alternative):
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# EMBEDDING_MODEL=text-embedding-ada-002
# EMBEDDING_DIMENSION=1536

# ----------------------------------------------------------------------------
# Retrieval Configuration
# ----------------------------------------------------------------------------
RELEVANCE_THRESHOLD=0.7
MAX_RESULTS=5

# ----------------------------------------------------------------------------
# Chunking Configuration
# ----------------------------------------------------------------------------
CHUNK_SIZE=100
CHUNK_OVERLAP=20
CHUNKING_STRATEGY=sliding_window
MAX_CHUNK_WINDOW=30
MIN_PDF_PARAGRAPHS_PER_PAGE=4

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
